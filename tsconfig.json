{
  "compilerOptions": {
    "outDir": "./public/js/",
    "baseUrl": ".",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es5",
      "es2015.iterable"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./assets/js/**/*"
  ]
}